<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mobile_robot_joint_pub">		
<xacro:macro name="mobile_arm_joint_pub">

  <gazebo>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <robotNamespace>/mobile</robotNamespace>
      <jointName>
        mobile_shoulder_pan_joint,
        mobile_shoulder_lift_joint,
        mobile_elbow_joint,
        mobile_wrist_1_joint,
        mobile_wrist_2_joint,
        mobile_wrist_3_joint
      </jointName>
      <updateRate>100.0</updateRate>
      <alwaysOn>true</alwaysOn>
    </plugin>
  </gazebo>
 
</xacro:macro>
</robot>
